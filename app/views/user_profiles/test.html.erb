

<div class="container-fluid">
  <div class='col-8 justify-content-center'>
    <div class='page-header'>
      <h1><%= @user.username %></h1>
    </div>

    <% if @user.profile_pic %>
      <img src=<%= @user.profile_pic %> />
    <% end %>

    <h3> <strong>Username: </strong><%= @user.username %> </h3>

    <h3> <strong>Name: </strong> <%= @user.f_name %> <%= @user.l_name %>  </h3>

    <h3> <strong>Email: </strong> <%= @user.email %> </h3>

    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Breed</th>
        </tr>
      </thead>

      <tbody>
        <% @pets.each do |pet| %>
          <tr>
            <td>
              <%= link_to pet.name, pet_path(id: pet.id) %>
            </td>
            <td>
              <%= pet.breed %>
            </td>
            <% if pet.profile_pic != nil %>
              <td>
                <img src=<%= pet.profile_pic %> />
              </td>
            <% end %>
          </tr>
        <% end %>
      <tbody>
    </table>
  </div>
</div>
