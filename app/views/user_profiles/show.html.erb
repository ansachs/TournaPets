<div class='page-header'>
  <h1><%= @user.username %></h1>
</div>

<hr>

<h3> <strong>Username: </strong><%= @user.username %> </h3>

<h3> <strong>Name: </strong> <%= @user.f_name %> <%= @user.l_name %>  </h3>

<h3> <strong>Email: </strong> <%= @user.email %> </h3>

<% if @user == current_user %>
  <td>
      <%= link_to 'Edit Account Information', edit_user_registration_path, class: 'btn btn-primary' %>
  </td>
<% end %>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td>
          <% if @user == current_user %>
            <%= check_box_tag pet.name, pet.id %>
          <% end %>
          <%= link_to pet.name, pet_path(id: pet.id) %>
        </td>
        <td>
          <%= pet.breed %>
        </td>
        <% if pet.profile_pic != nil %>
          <td>
            <%= pet.profile_pic %>
          </td>
        <% end %>
        <% if @user == current_user %>
          <td>
            <%= link_to 'Edit', edit_pet_path(id: pet.id) %> |
            <%= link_to 'Destroy', pet_path(id: pet.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  <tbody>
</table>

<% if @user.id == current_user.id %>
  <div><b>tag you pet and select an image or video to upload</b></div>
  <%= render partial: 'media_links/form', locals: {pets: @pets} %>
<% end %>



