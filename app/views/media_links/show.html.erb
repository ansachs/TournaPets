
<div class="container">
    <head>
      <%= stylesheet_link_tag "media_links" %>
    </head>

    <div class="img-with-text">

    
        <td>
          <img class="comment-image" style="height:300px" src=<%= @link.link %> \>
        </td>

      <br>
      <div class ="enter-comment">

        <%= form_tag user_profile_media_link_comments_path(user_profile_id: current_user.id, media_link_id: @link.id) do%>
        <%=text_area_tag :description, nil, placeholder: "Comment here.." %>
        <p><%= submit_tag "Create Comment" %></p>
        <% end %>
        <br>


      </div>

      <div class ="comment-box">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @comments.reverse_order.each do |com| %>
            <tr>
              <td><%=com.username %> :</td>
              <td>
                <%=com.description %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
       </div>
    </div>
</div>
