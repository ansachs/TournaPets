<div class='page-header'>
  <h1><%= @pet.name %></h1>
</div>

<img src=<%= @pet.profile_pic %> />

<div class='row'>
  <div class='col-lg-12'>
    <h4>Breed</h4>
    <p><%= @pet.breed %></p>

    <% @pet.media_links.each do |obj| %>
    <img src= <%= obj.link %> />
    <% end %>


    <h5>   <%= link_to 'Back to all pets', pets_path %> </h5>



  </div>

</div>


<div class='well'>
  <%= logged link_to 'Edit', edit_pet_path(@pet), class: 'btn btn-primary' %> |
  <%= link_to 'Back', pets_path %> |
</div>
