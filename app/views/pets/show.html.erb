<style>
*{
    margin:0;
    padding:0;
  }
  #cardWrapper{
    margin:50px;
  }
  #cardWrapper > img{
    height: 200px;
    width:300px;
    display: inline-block;
    vertical-align: middle;
  } 
  #cardContentContainer{
    width: 300px;
    height: 350px;
    background: #FFFAFA;
    padding: 20px;
    box-sizing: border-box;
  }

  #cardContentContainer > h2 {
    font-size:2em;
    font-weight:400;
    margin-bottom:20px;
  }

  #cardContentContainer > p{
    font-size:.9em;
    line-height:1.5;
    color: #757575;
  }


  * {
    box-sizing: border-box;
}

body {
    margin: 0;
    background-color: #fff;
}


.column {
    background-color: lightblue;
    float: left;
    width: 20%;
    padding: 100px;
    height: 700px; 
}


.columnPet {
    background-color: #fff;
    float: left;
    width: 20%;
    padding: 10px;
    
}


.rowTemp:after {
    content: "";
    display: table;
    clear: both;
}

.center {
    margin: auto;
    width: 40%;
    border: 0px solid #aaa;
    padding: 10px;
}


h1 {
  font: 400 100px/1.5 'Pacifico', Helvetica, sans-serif;
  color: #2b2b2b;
  text-shadow: 3px 3px 0px rgba(0,0,0,0.1), 7px 7px 0px rgba(0,0,0,0.05);
}
</style>
<div class='center'>
<div class='page-header'>
  <h1  align="center" ><%= @pet.name %></h1>
</div>
</div>
<center><img src=<%= @pet.profile_pic %> />
<h4>Breed</h4>
    <p><%= @pet.breed %></p></center>

<div class='row'>
  <div class='col-lg-12'>
    <center>
    <% @pet.media_links.each do |obj| %>
    <img src= <%= obj.link %> />
    <% end %>
    <h5>   <%= link_to 'Back to all pets', pets_path %> </h5> <center>
  </div>

</div>


<div class='well'>
  <center>
  <%= logged link_to 'Edit', edit_pet_path(@pet), class: 'btn btn-primary' %> |
  <%= link_to 'Back', pets_path %> | </center>
</div>
