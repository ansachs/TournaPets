<div class='page-header'>
  <h1>All Current Pets</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= link_to pet.name, pet_path(id: pet.id) %></td>
        <td><%= pet.breed %></td>
        <% if pet.profile_pic != nil %>
          <td> <img src=<%= pet.profile_pic %> /> </td>
        <% end %>
        <% if current_user && pet.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_pet_path(id: pet.id) %> |
              <%= link_to 'Destroy', pet_path(id: pet.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
    <td>
      <%= link_to 'New pet', new_pet_path, class: 'btn btn-primary' %>
    
      </td>
    </tr>
  </tbody>
</table>


<br>
