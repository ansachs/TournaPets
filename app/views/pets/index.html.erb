<style>
*{
    margin:0;
    padding:0;
  }
  #cardWrapper{
    margin:50px;
  }
  #cardWrapper > img{
    height: 200px;
    width:300px;
    display: inline-block;
    vertical-align: middle;
  } 
  #cardContentContainer{
    width: 300px;
    height: 350px;
    background: #FFFAFA;
    padding: 20px;
    box-sizing: border-box;
  }

  #cardContentContainer > h2 {
    font-size:2em;
    font-weight:400;
    margin-bottom:20px;
  }

  #cardContentContainer > p{
    font-size:.9em;
    line-height:1.5;
    color: #757575;
  }

* {
    box-sizing: border-box;
}

body {
    margin: 0;
    background-color: #fff;
}

.column {
    background-color: lightblue;
    float: left;
    width: 20%;
    padding: 100px;
    height: 700px; 
}

.columnPet {
    background-color: #fff;
    float: left;
    width: 20%;
    padding: 10px;
    
}

.row:after {
    content: "";
    display: table;
    clear: both;
}

.center {
    margin: auto;
    width: 18%;
    border: 5px solid #fff;
    padding: 35px;
}

h1 {
  font: 300 75px/1.5 'Pacifico', Helvetica, sans-serif;
  color: #2b2b2b;
  text-shadow: 3px 3px 0px rgba(0,0,0,0.1), 7px 7px 0px rgba(0,0,0,0.05);
}
</style>

<div class='container'>
<div class='page-header'>
  <h1 align="center">ALL CURRENT PETS</h1>
</div>

  
   <tr>
    <td>
      <%= link_to 'Add New Pet', new_pet_path, class: 'btn btn-success btn-lg btn-block' %>
      </td>
    </tr>

  <div class="row">
  
    <table class='table table-striped table-hover'>
    
      <tbody>
        <% @pets.each do |pet| %>
          <tr>   
            
        <div class="columnPet" style="background-color:#fff;">
           <div id="cardWrapper">
            <% if pet.profile_pic != nil %>         
                <img src=<%= pet.profile_pic %> >

                 <div id="cardContentContainer">

                  <h2> <%= link_to pet.name, pet_path(id: pet.id) %> </h2>

                  <p> <%= pet.breed %> </p>
                  </div>

            </div>
        </div>
            <% end %>
          </tr>
        <% end %>
      <tbody>
    </table>
  </div>

 
  </tbody>
</table>

<br>
</div>