<div class="container">
  <h1><%= @user.username %></h1>
  <% if @user.profile_pic %> 
    <img src=<%= @user.profile_pic %> />
  <% end %>
  <h4> Name: <%="#{@user.f_name} #{@user.l_name}"%></h4>
  <h4> Username: <%=@user.username%></h4>
  <h4> Email: <%=@user.email%></h4>
  <h4> <%= link_to 'Edit Account Information', edit_user_registration_path, class: 'btn btn-primary' %>
  <%= link_to 'Add a new pet', new_pet_path, class: 'btn btn-primary' %> </h4>
</div>

<div class="container">
  <%= form_tag ("/tournaments/#{@tournament.id}/enter_return") do %>
    <div class="row">
      <% @pets.each do |pet| %>
          <div class="col-" style="background-color:#fff">
            <div class="container">
              <% if pet.profile_pic != nil %>         
                <img class="align-self-center" style="height:300px" src=<%= pet.profile_pic %> />
                <h4> <%= link_to pet.name, pet_path(id: pet.id) %> </h4>
                <p> <%= pet.breed %> </p>
              <% end %>
              <% pet.media_links.each do |media_link| %>
                  <img class="align-self-center" style="height:300px" src=<%= media_link.link %> />
                  <div class="container">
                  <p> Tag <%= check_box_tag 'entries', {media_link_id: media_link.id, pet_id: pet.id} %> </p>

                </div>
              <% end %>
            </div>
          </div>
      <% end %>
  </div>
  <div class="container">
     <p><%= submit_tag 'Enter Tournament' %></p>
  </div>
  <% end %>
</div>
