<div class='page-header'>
  <h1><%=@tournament.theme%> Tournament Rounds</h1>
</div>
<table class='table table-striped table-hover'>
  <thead>
    <td>Round Name</td>
    <td>Scores</td>
  </thead>
  <tbody>
      <% @tournament.rounds.each do |round| %>
      <tr> <%= button_to "Next Round", "/set_next_round", params: [tournament_id: @tournament.id] %>
      <tr>
        <td><%= round.name %></td>
          <% matches = round.matches.to_a.sort_by! {|item|item.contestant_1.vote_count} %>
          <% count = 1 %>
        <% matches.reverse.each do |match| %>
          <td>
            <% if round.id == 1 %>
              <%="#{match.contestant_1.pets_media_link.pet.name} : #{match.contestant_1.vote_count}"%>
            <% elsif round.id == 2 %>
              <%="#{match.contestant_1.pets_media_link.pet.name} : #{match.contestant_1.vote_count} VS #{match.contestant_2.pets_media_link.pet.name} : #{match.contestant_2.vote_count}"%> 
            <% end %>
          </td>
          <% if count % 8 == 0 %>
            <br/>
          <%end%>
          <% count += 1 %>
        <%end%>
      </tr>
      <% end %>
    </tr>
  </tbody>
</table>
<br>
